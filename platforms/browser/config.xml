<?xml version='1.0' encoding='utf-8'?>
<widget id="com.uwe.mindseye" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0" xmlns:gap="http://phonegap.com/ns/1.0">
    <name>Minds Eye</name>
    <description>
        Explore the city and discover memories.
    </description>
    <author email="radley@radley.co.uk" href="http://uwe.ac.uk">
        Radley
    </author>
    <content src="index.html" />
    <icon src="res/icon.png" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <preference name="DisallowOverscroll" value="true" />
    <preference name="android-minSdkVersion" value="14" />
    <preference name="orientation" value="portrait" />
    <preference name="fullscreen" value="true" />
    <preference name="SplashScreenDelay" value="6000" />
    <preference name="SplashScreen" value="screen" />
</widget>
